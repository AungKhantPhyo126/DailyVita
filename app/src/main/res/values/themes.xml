<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.DailyVita" parent="Base.Theme.DailyVita">

        <!-- Customize your light theme here. -->
        <item name="colorPrimary">@color/orange</item>
        <item name="colorPrimaryVariant">@color/orange</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/orange</item>
        <item name="colorSecondaryVariant">@color/orange</item>
        <item name="colorOnSecondary">@color/dark_black</item>

        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->
    </style>

    <style name="Base.Theme.DailyVita" parent="Base.Theme.MaterialThemeBuilder">
        <item name="textAppearanceHeadline1">@style/TextAppearance.DailyVita.Headline1</item>
        <item name="textAppearanceHeadline2">@style/TextAppearance.DailyVita.Headline2</item>
        <item name="textAppearanceHeadline3">@style/TextAppearance.DailyVita.Headline3</item>
        <item name="textAppearanceHeadline4">@style/TextAppearance.DailyVita.Headline4</item>
        <item name="textAppearanceHeadline5">@style/TextAppearance.DailyVita.Headline5</item>
        <item name="textAppearanceHeadline6">@style/TextAppearance.DailyVita.Headline6</item>
        <item name="textAppearanceSubtitle1">@style/TextAppearance.DailyVita.Subtitle1</item>
        <item name="textAppearanceSubtitle2">@style/TextAppearance.DailyVita.Subtitle2</item>
        <item name="textAppearanceBody1">@style/TextAppearance.DailyVita.Body1</item>
        <item name="textAppearanceBody2">@style/TextAppearance.DailyVita.Body2</item>
        <item name="textAppearanceButton">@style/TextAppearance.DailyVita.Button</item>
        <item name="textAppearanceCaption">@style/TextAppearance.DailyVita.Caption</item>
        <item name="textAppearanceOverline">@style/TextAppearance.DailyVita.Overline</item>
    </style>

    <style name="Base.Theme.MaterialThemeBuilder" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="android:windowBackground">@color/soft_green</item>
    </style>

    <style name="ButtonCommonStyle">
        <item name="android:insetBottom">0dp</item>
        <item name="android:insetLeft">0dp</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetRight">0dp</item>

        <item name="textAllCaps">false</item>
        <item name="cornerRadius">8dp</item>
    </style>
</resources>